{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Format with clang-format",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/format_all.sh",
            "args": [
                "${workspaceFolder}/Active/Current"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/Build/${fileBasenameNoExtension}",
                "${workspaceFolder}/Build/${fileBasenameNoExtension}.dSYM"
            ],
            "problemMatcher": []
        },
        {
            "label": "create_build_dir",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "${workspaceFolder}/Build"
            ],
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "cppbuild",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${workspaceFolder}/Active/Current/${fileBasename}",
                "-o",
                "${workspaceFolder}/Build/${fileBasenameNoExtension}",
                "-I/opt/homebrew/include",
                "-L/opt/homebrew/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "clean",
                "create_build_dir"
            ]
        }
    ]
}